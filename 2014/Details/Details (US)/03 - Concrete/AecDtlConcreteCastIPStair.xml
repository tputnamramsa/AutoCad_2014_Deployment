<AecRecipeSpec defaultUnit="in">
	<ControlDefs>
		<CheckBox idStr="doHatch">
			<Label>Hatch stair</Label>
			<Description>Specifies whether to hatch the stair </Description>
			<Default>1</Default>
		</CheckBox>
		<CheckBox idStr="doReinforcing">
			<Label>Show reinforcing</Label>
			<Description>Specifies whether to draw reinforcing for the stair </Description>
			<Default>1</Default>
		</CheckBox>
		<CheckBox idStr="useCustomSize">
			<Label>Use custom size</Label>
			<Description>Specifies whether to use values from database or a custom size </Description>
			<Default>0</Default>
		</CheckBox>
		<EditBoxInteger idStr="customRiserNumber">
			<Label>Riser number</Label>
			<Description>Specifies custom riser number</Description>
			<Default ref="dbTable">RISER_NO</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxInteger>
		<EditBoxDistance idStr="customRiser" unitDep="true">
			<Label>Riser</Label>
			<Description>Specifies custom riser</Description>
			<Default ref="dbTable">RISER</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxDistance>
		<EditBoxDistance idStr="customTread" unitDep="true">
			<Label>Tread</Label>
			<Description>Specifies custom tread</Description>
			<Default ref="dbTable">TREAD</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxDistance>
		<EditBoxDistance idStr="customNosing" unitDep="true">
			<Label>Nosing</Label>
			<Description>Specifies custom nosing</Description>
			<Default ref="dbTable">NOSING</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxDistance>
		<EditBoxDistance idStr="customSlabThk" unitDep="true">
			<Label>Slab thickness</Label>
			<Description>Specifies custom slab thickness</Description>
			<Default ref="dbTable">SLAB_THK</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxDistance>
	</ControlDefs>
	
	<Recipe idStr="section">
		<Label>Section</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcCastInPlaceStairSection"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="doHatch"/>
			<ControlRef idRef="doReinforcing"/>
			<ControlRef idRef="useCustomSize"/>
			<ControlRef idRef="customRiserNumber"/>
			<ControlRef idRef="customRiser"/>
			<ControlRef idRef="customTread"/>
			<ControlRef idRef="customNosing"/>
			<ControlRef idRef="customSlabThk"/>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadHatchProps>
					<HatchAlias>concrete</HatchAlias>
				</AcadHatchProps>
				<AcadEntityProps>
					<Layer ref="layerKey">HATCH</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<SubComponents>
			<SubComponent idStr="rebar" keys="rebar" subRecipe="subSectionSlab">
				<Label>Rebar - Longitudinal</Label>
				<Description>Specifications for longitudinal rebar for the stair </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
			<SubComponent idStr="rebarSizeLine" keys="rebar" subRecipe="subRebarSizeLine">
				<Label>Rebar - Lateral</Label>
				<Description>Specifications for lateral rebar for the stair </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
		</SubComponents>
	</Recipe>
	
	<Recipe idStr="plan">
		<Label>Plan</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcCastInPlaceStairPlan"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="useCustomSize"/>
			<ControlRef idRef="customRiserNumber"/>
			<ControlRef idRef="customRiser"/>
			<ControlRef idRef="customTread"/>
		</Controls>
		<Data>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="hidden">
				<AcadEntityProps>
					<Layer ref="layerKey">THIN</Layer>
					<Linetype>HIDDEN</Linetype>
				</AcadEntityProps>
			</Item>
		</Data>
	</Recipe>
	
	<Recipe idStr="elev">
		<Label>Elevation</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcCastInPlaceStairElevation"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="useCustomSize"/>
            		<ControlRef idRef="customRiserNumber"/>
			<ControlRef idRef="customRiser"/>
			<ControlRef idRef="customTread"/>
			<ControlRef idRef="customNosing"/>
			<ControlRef idRef="customSlabThk"/>
		</Controls>
		<Data>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="hidden">
				<AcadEntityProps>
					<Layer ref="layerKey">THIN</Layer>
					<Linetype>HIDDEN</Linetype>
				</AcadEntityProps>
			</Item>
		</Data>
	</Recipe>
	
</AecRecipeSpec>
