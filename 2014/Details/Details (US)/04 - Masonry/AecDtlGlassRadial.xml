  <Recipe idStr="ElevationPattern">
    <Label>Elevation(Pattern)</Label>
    <Implementation>
      <ObjectARX appnameAlias="AECDTLEX" funcRcp="AecDtlRcpGlassRadialElevationPattern" />
    </Implementation>
    <Controls>
    	<ControlRef idRef="showMortar"></ControlRef>
