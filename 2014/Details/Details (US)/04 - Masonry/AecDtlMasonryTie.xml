<AecRecipeSpec defaultUnit="in">
	<ControlDefs>
		<EditBoxDistance idStr="jointSize" unitDep="true">
			<Label>Joint size</Label>
			<Description>Specifies the size of the mortar joint</Description>
			<Default>0.375</Default>
		</EditBoxDistance>
	</ControlDefs>

	<Recipe idStr="section">
		<Label>Section</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlMasonryTieSection"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="jointSize"/>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<Params>
					<Gauge>0.0625</Gauge>
				</Params>
			</Item>
		</Data>
	</Recipe>
	
	<Recipe idStr="sectionArray">
		<Label>Section (Array)</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlMasonryTieSectionArray"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="jointSize"/>
			<EditBoxDistance idStr="tieSpacing" unitDep="true">
				<Label>Tie spacing</Label>
				<Description>Specifies the spacing between ties</Description>
				<Default>16.0</Default>
			</EditBoxDistance>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<Params>
					<Gauge>0.0625</Gauge>
				</Params>
			</Item>
		</Data>
		<Options>
			<Jig>
				<IsOrientedX>false</IsOrientedX>
			</Jig>
			<JigEnt>
				<IsOrientedX>false</IsOrientedX>
				<ForceExtra>1</ForceExtra>
			</JigEnt>
		</Options>
	</Recipe>
	
	<Recipe idStr="plan">
		<Label>Plan</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlMasonryTiePlan"/>
		</Implementation>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<Params>
					<UnitLength>15.5</UnitLength>
					<TotalLength>16.0</TotalLength>
					<TopGap>0.5</TopGap>
				</Params>
			</Item>
		</Data>
	</Recipe>
	
</AecRecipeSpec>
