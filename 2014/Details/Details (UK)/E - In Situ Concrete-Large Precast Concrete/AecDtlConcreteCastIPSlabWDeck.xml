<AecRecipeSpec defaultUnit="in">
	<ControlDefs>
		<CheckBox idStr="doHatch">
			<Label>Hatch slab</Label>
			<Description>Specify whether to hatch the slab. </Description>
			<Default>1</Default>
		</CheckBox>
		<CheckBox idStr="doReinforcing">
			<Label>Show reinforcing</Label>
			<Description>Specify whether to draw reinforcing for the slab. </Description>
			<Default>1</Default>
		</CheckBox>
		<CheckBox idStr="useCustomSize">
			<Label>Use custom size</Label>
			<Description>Use values from database or specify a custom size. </Description>
			<Default>0</Default>
		</CheckBox>
		<EditBoxDistance idStr="customDepth" unitDep="true">
			<Label>Depth</Label>
			<Description>Custom depth.</Description>
			<Default ref="dbTable">DEPTH</Default>
			<Validation>NoNegNoZero</Validation>
			<ParentControl idRef="useCustomSize">
				<ParentControlState state="0" visible="no" enabled="no"/>
			</ParentControl>
		</EditBoxDistance>
	</ControlDefs>
	
	<Recipe idStr="section">
		<Label>Section</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteCastInPlaceSlabWDeckSection"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="useCustomSize"/>
			<ControlRef idRef="customDepth"/>
			<ControlRef idRef="doHatch"/>
			<ControlRef idRef="doReinforcing"/>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
			    <AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadHatchProps>
					<HatchAlias>concrete</HatchAlias>
				</AcadHatchProps>
				<AcadEntityProps>
					<Layer ref="layerKey">HATCH</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<SubComponents>
			<SubComponent idStr="deck" keys="deck" subRecipe="subEnd">
				<Label>Deck</Label>
				<Description>Metal deck. </Description>
			</SubComponent>
			<SubComponent idStr="rebar" keys="rebar" subRecipe="subSectionSlab">
				<Label>Rebar - Longitudinal</Label>
				<Description>Longitudinal rebar for the slab. </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
			<SubComponent idStr="rebarSizeLine" keys="rebar" subRecipe="subRebarSizeLine">
				<Label>Rebar - Lateral</Label>
				<Description>Lateral rebar for the wall. </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
		</SubComponents>
	</Recipe>
	
	<Recipe idStr="plan">
		<Label>Plan</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteCastInPlaceSlabWDeckPlan"/>
		</Implementation>
		<Data>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="hidden">
				<AcadEntityProps>
					<Layer ref="layerKey">THIN</Layer>
					<Linetype>HIDDEN</Linetype>
				</AcadEntityProps>
			</Item>
		</Data>
	</Recipe>
	
	<Recipe idStr="elev">
		<Label>Elevation</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteCastInPlaceSlabWDeckElevation"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="useCustomSize"/>
			<ControlRef idRef="customDepth"/>
			<ControlRef idRef="doHatch"/>
			<ControlRef idRef="doReinforcing"/>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
			    <AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadHatchProps>
					<HatchAlias>concrete</HatchAlias>
				</AcadHatchProps>
				<AcadEntityProps>
					<Layer ref="layerKey">HATCH</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<SubComponents>
			<SubComponent idStr="deck" keys="deck" subRecipe="subSide">
				<Label>Deck</Label>
				<Description>Metal deck. </Description>
			</SubComponent>
			<SubComponent idStr="rebar" keys="rebar" subRecipe="subSectionSlab">
				<Label>Rebar - Longitudinal</Label>
				<Description>Longitudinal rebar for the slab. </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
			<SubComponent idStr="rebarSizeLine" keys="rebar" subRecipe="subRebarSizeLine">
				<Label>Rebar - Lateral</Label>
				<Description>Lateral rebar for the wall. </Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
		</SubComponents>
	</Recipe>
	
</AecRecipeSpec>
