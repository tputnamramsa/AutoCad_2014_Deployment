<AecRecipeSpec defaultUnit="in">
	<ControlDefs>
		<CheckBox idStr="doHatch">
			<Label>Hatch lintel</Label>
			<Default>1</Default>
		</CheckBox>
	</ControlDefs>
	
	<Recipe idStr="section">
		<Label>Section</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteLintelSection"/>
		</Implementation>
		<Controls>
			<ControlRef idRef="doHatch"/>
			<CheckBox idStr="showMortar">
				<Label>Show mortar</Label>
				<Description>Specifies whether to draw mortar.</Description>
				<Default>1</Default>
			</CheckBox>
			<CheckBox idStr="doReinforcing">
				<Label>Show reinforcing</Label>
				<Description>Specify whether to draw reinforcing for the lintel. </Description>
				<Default>1</Default>
			</CheckBox>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="infill">
				<AcadHatchProps>
					<HatchAlias>lintels</HatchAlias>
				</AcadHatchProps>
				<AcadEntityProps>
					<Layer ref="layerKey">HATCH</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<SubComponents>
			<SubComponent idStr="mortar" keys="mortar" subRecipe="subSection">
				<Label>Mortar</Label>
				<Description>Mortar for the lintel. </Description>
				<ParentControl idRef="showMortar">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
			<SubComponent idStr="rebar" keys="rebar" subRecipe="subSectionPts">
				<Label>Rebar</Label>
				<Description>Reinforcing for the lintel.</Description>
				<ParentControl idRef="doReinforcing">
					<ParentControlState state="0" visible="no" enabled="no"/>
				</ParentControl>
			</SubComponent>
		</SubComponents>
	</Recipe>
	
	<Recipe idStr="plan">
		<Label>Plan</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteLintelPlan"/>
		</Implementation>
		<Data>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<Options>
			<Jig>
				<AllowYFlip>false</AllowYFlip>
			</Jig>
		</Options>
	</Recipe>
	
	<Recipe idStr="elev">
		<Label>Elevation</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlConcreteLintelElevation"/>
		</Implementation>
		<Data>
			<Item idStr="boundary">
				<AcadEntityProps>
					<Layer ref="layerKey">MED</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
		<Options>
			<Jig>
				<AllowYFlip>false</AllowYFlip>
			</Jig>
		</Options>
	</Recipe>
	
</AecRecipeSpec>
