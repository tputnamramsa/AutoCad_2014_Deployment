<AecRecipeSpec defaultUnit="in">
    <ControlDefs>
        <CheckBox idStr="doHatch">
            <Label>Hatch</Label>
            <Description>Specifies whether hatch is drawn</Description>
            <Default>0</Default>
        </CheckBox>
        <CheckBox idStr="showMortar">
            <Label>Show Mortar</Label>
            <Description>Specifies whether to draw mortar joint</Description>
            <Default>1</Default>
        </CheckBox>
    </ControlDefs>
  
    <Recipe idStr="Plan">
        <Label>Plan</Label>
        <Implementation>
            <ObjectARX appnameAlias="AECDTLEX" funcRcp="AecDtlRcpGlassBullnoseCapPlan" />
        </Implementation>
        <Controls>
            <ControlRef idRef="showMortar"></ControlRef>
        </Controls>
        <Data>
            <Item idStr="block">
                <AcadEntityProps>
                    <Layer ref="layerKey">WIDE</Layer>
                </AcadEntityProps>
            </Item>
            <Item idStr="boundary"/>
            <Item idStr="interior">
                <AcadEntityProps>
                    <Layer ref="layerKey">THIN</Layer>
                </AcadEntityProps>
            </Item>
        </Data>
        <Options>
            <Jig>
                <IsOrientedX>true</IsOrientedX>
            </Jig>
            <JigEnt>
                <IsOrientedX>true</IsOrientedX>
            </JigEnt>
        </Options>
        <SubComponents>
            <SubComponent idStr="mortar" keys="mortar" subRecipe="subSection">
                <Label>Mortar</Label>
                <Description>Specifications for the mortar</Description>
                <ParentControl idRef="showMortar">
                    <ParentControlState state="0" visible="no" enabled="no"/>
                </ParentControl>
            </SubComponent>
        </SubComponents>
    </Recipe>

    <Recipe idStr="Elevation">
        <Label>Elevation</Label>
        <Implementation>
            <ObjectARX appnameAlias="AECDTLEX" funcRcp="AecDtlRcpGlassBullnoseCapElevation" />
        </Implementation>
        <Controls>
            <ControlRef idRef="doHatch"></ControlRef>
        </Controls>
        <Data>
            <Item idStr="block">
                <AcadEntityProps>
                    <Layer ref="layerKey">THIN</Layer>
                </AcadEntityProps>
            </Item>
            <Item idStr="boundary"/>
            <Item idStr="infill">
                <AcadHatchProps>
                    <PatternName>Doors&amp;Windows_Glass</PatternName>
                    <PatternScale>4.0</PatternScale>
                </AcadHatchProps>
                <AcadEntityProps>
                    <Layer ref="layerKey">HATCH</Layer>
                </AcadEntityProps>
            </Item>
        </Data>
    </Recipe>
</AecRecipeSpec>