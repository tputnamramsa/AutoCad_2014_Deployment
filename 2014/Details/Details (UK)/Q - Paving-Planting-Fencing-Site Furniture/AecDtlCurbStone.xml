<AecRecipeSpec defaultUnit="in">

	<Recipe idStr="section">
		<Label>Section</Label>
		<Implementation>
			<ObjectARX appnameAlias="AECDTL" funcRcp="AecDtlRcpCurbStone"/>
		</Implementation>
		<Controls>
			<CheckBox idStr="doHatch">
				<Label>Hatch item</Label>
				<Default>1</Default>
			</CheckBox>
			<CheckBox idStr="coarseOutline">
				<Label>Coarse outline</Label>
				<Default>1</Default>
			</CheckBox>
		</Controls>
		<Data>
			<Item idStr="block">
				<AcadEntityProps>
					<Layer ref="layerKey">WIDE</Layer>
				</AcadEntityProps>
			</Item>
			<Item idStr="boundary">
				<Params>
					<SqDeltaX>1.0</SqDeltaX>	<!-- Fudge factors to smudge outline of stone -->
					<SqDeltaY>0.1</SqDeltaY>
				</Params>
			</Item>
			<Item idStr="infill">
				<AcadHatchProps>
					<HatchAlias>stone</HatchAlias>
				</AcadHatchProps>
				<AcadEntityProps>
					<Layer ref="layerKey">HATCH</Layer>
				</AcadEntityProps>
			</Item>
		</Data>
	</Recipe>
	
</AecRecipeSpec>
